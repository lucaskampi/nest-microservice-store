datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  sku       String   @unique
  price     Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id                 Int            @id @default(autoincrement())
  orderId            Int?
  preparationTime    Int?
  destinationAddress String
  deliveryDate       DateTime?
  voucher            Int?
  state              String         @default("RECEIVED")
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
}